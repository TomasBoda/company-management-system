<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox styleClass="page" spacing="20" xmlns="http://javafx.com/javafx" xmlns:fx="http://javafx.com/fxml" fx:controller="com.app.controllers.team.AddTeamController">
    <Label styleClass="page-title">New Team</Label>

    <VBox styleClass="panel" spacing="20">
        <GridPane hgap="10" vgap="10">
            <Label GridPane.columnIndex="0" GridPane.rowIndex="0">Name</Label>
            <TextField GridPane.columnIndex="1" GridPane.rowIndex="0" fx:id="nameField" promptText="Team name" />

            <Label GridPane.columnIndex="0" GridPane.rowIndex="1">Employees</Label>
            <ChoiceBox GridPane.columnIndex="1" GridPane.rowIndex="1" fx:id="employeeSelection" />
        </GridPane>

        <VBox fx:id="employeesList" spacing="5" />

        <Button onAction="#addTeam">Add</Button>
    </VBox>
</VBox>
